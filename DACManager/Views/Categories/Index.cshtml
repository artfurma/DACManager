@model IEnumerable<DACManager.Models.Category>

@{
	ViewData["Title"] = "Index";
}

<h2>Categories</h2>

@if (ViewData["Insert"] != null && (bool)ViewData["Insert"])
{
	<p>
		<a asp-action="Create">Create New</a>
	</p>
}

@if (ViewData["Select"] != null && (bool)ViewData["Select"])
{
	<form asp-controller="Categories" asp-action="Index" method="get">
		<p>
			Search: <input type="text" name="SearchString">
			<input type="submit" value="Filter" />
		</p>
	</form>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@if (ViewData["Update"] != null && (bool)ViewData["Update"])
						{
							<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					}
						|
						@if (ViewData["Delete"] != null && (bool)ViewData["Delete"])
						{
							<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					}
					</td>
				</tr>
			}
		</tbody>
	</table>
}
