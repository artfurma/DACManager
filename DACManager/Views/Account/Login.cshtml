@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
	ViewData["Title"] = "Login Page";
	Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}
<!-- Top content -->
<div class="top-content">

	<div class="inner-bg">
		<div class="container">
			<div class="row">
				<div class="col-sm-6 col-sm-offset-3 form-box">
					<div class="form-top">
						<div class="form-top-left">
							<h3>Application Log In</h3>
							<p>Please enter your login credentials below:</p>
						</div>
						<div class="form-top-right">
							<i class="fa fa-sign-in"></i>
						</div>
					</div>
					<div class="form-bottom">
						<form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
							<div class="form-group">
								<label asp-for="UserName" class="sr-only">User Name</label>
								<input asp-for="UserName" type="text" placeholder="Username" class="form-control">
								<span asp-validation-for="UserName" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Password" class="sr-only">Password</label>
								<input asp-for="Password" type="password" placeholder="Password" class="form-control">
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
							<hr />
							<div class="form-group">
								<button type="submit" class="btn">Log in</button>
							</div>
							@*<p class="col-xs-8">
								<a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">No account? Create one.</a>
							</p>*@
						</form>
						<br />
					</div>
				</div>
			</div>
		</div>
	</div>

</div>